# 5. DeepLabV3+ ëª¨ë¸ ì •ì˜ (Day1ìš©)
import segmentation_models_pytorch as smp
class LaneSegModel(torch.nn.Module):
    def __init__(self):
        super().__init__()
        self.model = smp.DeepLabV3Plus("resnet34", classes=1, activation=None)
    def forward(self, x):
        logits = self.model(x)
        return torch.sigmoid(logits).squeeze(1)  # [B,H,W]

model = LaneSegModel().cuda() if torch.cuda.is_available() else LaneSegModel()
